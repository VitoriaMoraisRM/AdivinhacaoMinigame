package paradigmasLP;

import java.util.Scanner;
import java.util.Random;
import java.io.PrintStream;

public class aps {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		System.out.println("Olá! Vamos brincar?\nPensarei em um número de 0 a 100\n"
				+ "e você terá que adivinha-lo.\nVamos lá? :)");

		Random gerador = new Random();
		int numeroSecreto = gerador.nextInt(101);

		System.out.println("Digite um número de 0 a 100.");

		int numeroUsuario = sc.nextInt();

		if (numeroUsuario < numeroSecreto) {
			System.out.println("O número digitado é menor que o número secreto!");
		} else {
			if (numeroUsuario > numeroSecreto) {
				System.out.println("O número digitado é maior que o número secreto!");
			} else {
				System.out.println("Parabéns! Você acertou o número!");
			}
		}
	}

}
